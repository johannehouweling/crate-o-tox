{
  "metadata": {
    "name": "Toxicology Mode",
    "description": "Streamlined metadata mode for assay annotation, aligned with the BioStudies submission template for (cell-based) toxicology data.",
    "version": 0.1,
    "author": "J.M. Houweling",
    "license": "GNU Affero General Public License v3.0"
  },
  "contextPrefixes": {
    "schema": "http://schema.org/",
    "bioschemas": "https://bioschemas.org/",
    "dct": "http://purl.org/dc/terms/",
    "tox": "https://w3id.org/tox/terms#",
    "bao": "http://www.bioassayontology.org/bao#",
    "ldac": "https://w3id.org/ldac/terms#",
    "obo": "http://purl.obolibrary.org/obo/",
    "mesh": "http://purl.bioontology.org/ontology/MESH/"
  },
  "context": [],
  "conformsToUri": [
    "https://w3id.org/tox/profile#CellBasedToxicology",
    "https://w3id.org/ldac/profile#Collection"
  ],
  "rootDataset": {
    "type": [
      "Dataset"
    ]
  },
  "inputGroups": [
    {
      "name": "About",
      "help": "Core description of the assay dataset and links used in BioStudies submissions.",
      "inputs": [
        "@id",
        "@type",
        "http://schema.org/name",
        "http://schema.org/description",
        "http://schema.org/datePublished",
        "http://schema.org/license",
        "https://w3id.org/ldac/terms#doi",
        "http://schema.org/url",
        "https://w3id.org/terms#caseStudy",
        "https://w3id.org/terms#regulatoryQuestion",
        "https://w3id.org/terms#workflowStep"
      ]
    },
    {
      "name": "People & Organisations",
      "help": "Contributors, contacts, and funding information.",
      "inputs": [
        "http://schema.org/author",
        "http://schema.org/funder",
        "http://schema.org/affiliation"
      ]
    },
    {
      "name": "Structure",
      "help": "Supporting documentation or derived materials.",
      "inputs": [
        "http://schema.org/hasPart",
        "http://schema.org/isPartOf"
      ]
    },
    {
      "name": "Biological Model Information",
      "help": "Details on the cell model used in the assay.",
      "inputs": [
        "http://www.bioassayontology.org/bao#BAO_0000551",
        "http://purl.obolibrary.org/obo/UBERON_0000062",
        "http://purl.obolibrary.org/obo/UBERON_0000479",
        "https://bioschemas.org/BioSample"
      ]
    },
    {
      "name": "Chemical Information",
      "help": "Test substances associated with this assay.",
      "inputs": [
        "https://bioschemas.org/ChemicalSubstance"
      ]
    },
    {
      "name": "Exposure Information",
      "help": "Exposure regime applied.",
      "inputs": [
        "tox:exposureType",
        "tox:exposureDuration",
        "tox:exposureDurationUnit",
        "tox:exposureInterval",
        "tox:exposureIntervalUnit"
      ]
    },
    {
      "name": "Endpoint Readout Information",
      "help": "Measurement configuration and readout values.",
      "inputs": [
        "http://purl.bioontology.org/ontology/MESH/D000073931",
        "https://w3id.org/ldac/terms#aopEvent",
        "http://www.bioassayontology.org/bao#BAO_0000697",
        "http://www.bioassayontology.org/bao#BAO_0002628",
        "http://www.bioassayontology.org/bao#BAO_0002001",
        "http://www.bioassayontology.org/bao#BAO_0000077"
      ]
    }
  ],
  "lookup": {
    "CellLine": {
      "module": "cellosaurus",
      "fields": [
        "@id",
        "name",
        "accession",
        "species"
      ]
    },
    "ChemicalSubstance": {
      "module": "pubchem",
      "fields": [
        "@id",
        "name",
        "synonym",
        "inchi",
        "inchikey"
      ]
    },
    "AdverseOutcomePathway": {
      "module": "aopwiki",
      "fields": [
        "@id",
        "name",
        "short_name",
        "description"
      ]
    },
    "Organization": {
      "module": "ror"
    }
  },
  "enabledClasses": [
    "Dataset",
    "Person",
    "Organization",
    "ChemicalSubstance",
    "CellLine",
    "CreativeWork",
    "PropertyValue",
    "File",
    "DOI",
    "URL",
    "TextArea",
    "Text",
    "AdverseOutcomePathway"
  ],
  "classes": {
    "Dataset": {
      "id": "http://schema.org/Dataset",
      "inputs": [
        {
          "id": "http://schema.org/name",
          "name": "name",
          "help": "Title of this toxicology dataset.",
          "required": true,
          "multiple": false,
          "type": [
            "Text"
          ]
        },
        {
          "id": "http://schema.org/description",
          "name": "description",
          "help": "Narrative description of the assay, matching the BioStudies study description.",
          "required": true,
          "multiple": false,
          "type": [
            "TextArea"
          ]
        },
        {
          "id": "http://schema.org/datePublished",
          "name": "datePublished",
