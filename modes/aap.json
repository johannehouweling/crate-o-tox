          "help": "License or terms of reuse, ideally a URL.",
          "required": true,
          "multiple": false,
          "type": [
            "URL"
          ]
        },
        {
          "id": "https://w3id.org/ldac/terms#doi",
          "name": "ldac:doi",
          "label": "DOI",
          "multiple": false,
          "required": true,
          "help": "A Digital Object Identifier, e.g. https://doi.org/10.1000/182.",
          "type": [
            "URL"
          ]
        },
        {
          "id": "http://schema.org/identifier",
